{
  "name": "nawy-backend",
  "version": "1.0.0",
  "description": "Backend service for handling products and users with Redis caching and MongoDB",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "prestart": "npm run build"
  },
  "dependencies": {
    "class-validator": "^0.14.1",
    "convict": "^6.2.3",
    "dotenv": "^16.1.4",
    "express": "^4.18.2",
    "ioredis": "^5.3.0",
    "mongoose": "^7.3.1",
    "pino": "^8.14.0",
    "ts-node": "^10.9.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/convict": "^6.1.6",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^18.17.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.45.0",
    "jest": "^29.6.2",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "ISC"
}
