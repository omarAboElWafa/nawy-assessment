{
  "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "outDir": "dist",
      "rootDir": "src", 
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "types": ["node", "jest"],
      "baseUrl": "src", // Base directory for non-relative module names
      "paths": {
          "@config/*": ["config/*"],
          "@libs/*": ["libraries/*"],
          "@apps/*": ["apps/*"],
          "@apps/appartments/*": ["apps/appartments/*"],
          "@apps/users/*": ["apps/users/*"],
          "@scripts/*": ["scripts/*"],
          "@tests/*": ["tests/*"]
      }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}